<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".barcode">

    <SurfaceView
        android:id="@+id/surface_view"
        android:layout_width="411dp"
        android:layout_height="174dp"
        android:layout_marginTop="60dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/barcode_text"
        android:layout_width="328dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:padding="5dp"
        android:text="Barcode Text"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/surface_view"
        tools:layout_editor_absoluteX="41dp" />

    <TextView
        android:id="@+id/kohlenhydrate_text"
        android:layout_width="328dp"
        android:layout_height="70dp"
        android:layout_marginTop="84dp"
        android:padding="5dp"
        android:text="Kohlenhydrate Text"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/surface_view"
        tools:layout_editor_absoluteX="41dp" />

    <TextView
        android:id="@+id/edit_be"
        android:layout_width="328dp"
        android:layout_height="74dp"
        android:layout_marginTop="240dp"
        android:text="Broteinheiten"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/surface_view"
        tools:layout_editor_absoluteX="41dp" />

    <EditText
        android:id="@+id/edit_essen"
        android:layout_width="328dp"
        android:layout_height="74dp"
        android:layout_marginTop="160dp"
        android:hint="Gegessene Menge in g: "
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/surface_view"
        tools:layout_editor_absoluteX="41dp" />

    <TextView
        android:id="@+id/edit_insulin"
        android:layout_width="328dp"
        android:layout_height="74dp"
        android:layout_marginTop="310dp"
        android:text="Insulin"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/surface_view"
        tools:layout_editor_absoluteX="41dp" />

    <Button
        android:id="@+id/refreshbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="384dp"
        android:background="@drawable/buttonshape"
        android:drawableStart="@drawable/refresh"
        android:drawablePadding="5dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="Neu berechnen"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/surface_view"
        tools:layout_editor_absoluteX="39dp" />

</androidx.constraintlayout.widget.ConstraintLayout>